<?php
$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
    ->exclude('vendor')
    ->notPath('tests/_support/_generated')
;

$cacheDir = __DIR__.'/.robo/cache';
if (!is_dir($cacheDir)) {
    mkdir($cacheDir, 0777, true);
}
return PhpCsFixer\Config::create()
//    ->setUsingCache(false)
    ->setCacheFile($cacheDir.'/.php_cs.cache')
    ->setRules([
        '@Symfony' => true,
    ])
    ->setFinder($finder)
;
